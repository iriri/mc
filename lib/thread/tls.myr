use std
use sys

pkg thread =
	pkglocal type hdr = struct
		stksz : sys.size
		base  : byte#
		tls   : void#
		pad   : uint32  /* unused, for now */
		tid   : sys.pid /* assumed to be 32 bits */
	;;

	extern const tid      : (-> sys.pid)
	extern generic settls : (p : @a# -> void)
	extern const tls      : (-> void#)
;;
